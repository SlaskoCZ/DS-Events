{# This is the base layout for your project, and will be used on every page unless specified. #}

<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="{{root}}assets/css/app.css">
  </head>
<body>

<div class="top-bar">
  <div class="title-bar" data-responsive-toggle="main-top-left-menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
  </div>
  <ul class="dropdown horizontal menu show-for-medium">
    <li><a href="#">Logo</a></li>
    <li><a href="#">Events</a></li>
  </ul>

  <div class="title-bar" data-responsive-toggle="main-top-right-menu" data-hide-for="medium">
    <button class="menu-icon" type="button" data-toggle></button>
  </div>

  <div class="top-bar-right" >
    <ul class="dropdown vertical medium-horizontal menu" id="main-top-right-menu">
      <li><a href="#">Notification</a></li>
      <li><a href="#">Calendar</a></li>
    </ul>
  </div>
</div>

{# Pages you create in the src/pages/ folder are inserted here when the flattened page is created. #}
{% block page %}
{% endblock %}

<div class="footer">
  Website made by Slasko
</div>

<script src="{{root}}assets/js/app.js"></script>
</body>
</html>
